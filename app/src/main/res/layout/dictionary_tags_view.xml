<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/dictionary_tags_view">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/dictionary_tags_view_text"
        app:fontFamily="sans-serif"
        android:padding="6dp"
        android:textColor="@color/text_foreground_primary"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/dictionary_tags_view_selected"
        android:contentDescription="@string/dictionary_tags_activity_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_24px" />

    <CheckBox
        android:id="@+id/dictionary_tags_view_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>