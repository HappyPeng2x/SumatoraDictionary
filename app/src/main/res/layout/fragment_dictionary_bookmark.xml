<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DictionaryBookmarkFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dictionary_bookmark_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Bookmarks"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/bookmark_fragment_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eng"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context="org.happypeng.sumatora.android.sumatoradictionary.Dictionary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dictionary_bookmark_fragment_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical" />

            <ProgressBar
                android:id="@+id/dictionary_bookmark_fragment_progressbar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:indeterminate="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dictionary_bookmark_fragment_statustext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading database..."
                android:ems="10" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
